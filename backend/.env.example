# Environment variables for the AI-based Python Code Generator System

# AI Studio API Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
AI_STUDIO_API_KEY=your_ai_studio_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration (if needed later)
DATABASE_URL=sqlite:///./code_generator.db

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Logging Configuration
LOG_LEVEL=INFO

# Project Generation Settings
MAX_PROJECT_SIZE=100  # Maximum number of files to generate
DEFAULT_PYTHON_VERSION=3.9
SUPPORTED_GUI_FRAMEWORKS=streamlit,tkinter
